				"source": [
					"if not any(mount.mountPoint == mount_point_src for mount in mssparkutils.fs.mounts()):\r\n",
					"    mssparkutils.fs.mount(  \r\n",
					"        \"abfss://bronze@storageaccnsm.dfs.core.windows.net\",\r\n",
