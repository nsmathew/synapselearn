					"mount_point_dest = '/mnt/silver'\r\n",
					"input_path = 'synfs:/' + jobid + mount_point_src+ '/SalesLT/'\r\n",
					"output_path = 'synfs:/' + jobid + mount_point_dest + '/SalesLT/'\r\n",
